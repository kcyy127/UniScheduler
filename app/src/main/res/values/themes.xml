<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.UniScheduler.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_white</item>
        <item name="colorPrimaryVariant">@color/my_white_40</item>
        <item name="colorOnPrimary">@color/my_dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_purple</item>
        <item name="colorSecondaryVariant">@color/my_purple</item>
        <item name="colorOnSecondary">@color/my_dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/my_dark_background</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/my_dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TextView.UniScheduler.Default" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextView.UniScheduler.Heading" parent="TextView.UniScheduler.Default">
        <item name="android:textSize">@dimen/heading</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextView.UniScheduler.Month" parent="TextView.UniScheduler.Default">
        <item name="android:textSize">@dimen/month</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>
</resources>