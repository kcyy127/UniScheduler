<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:id="@+id/container">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="#65636B"
            app:cardCornerRadius="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/my_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSection"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="12dp"
                    android:text="A"
                    android:textSize="18sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp"
                    android:background="@color/my_white_50" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="18dp">


                    <TextView
                        android:id="@+id/tvProf"
                        style="@style/TextView.UniScheduler.EventHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horseman, Bojack" />

                    <TextView
                        android:id="@+id/tvTimes"
                        style="@style/TextView.UniScheduler.EventHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="LE MWF 9:00 - 10:00 \n DI Th 15:00 - 16:00" />


                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>