<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/inset_delete_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_heading_top"
            android:layout_marginHorizontal="18dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/delete_course_confirmation"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="18dp"
            android:text="@string/delete_course_details"
            android:textAlignment="center"
            android:textSize="16sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/my_white_20"
            android:fontFamily="@font/ubuntu_bold"
            android:letterSpacing="0"
            android:paddingVertical="12dp"
            android:text="CANCEL"
            android:textColor="@color/my_white"
            android:textSize="16sp"
            app:cornerRadius="24dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/margin_heading_top"
            android:backgroundTint="#E55555"
            android:fontFamily="@font/ubuntu_bold"
            android:letterSpacing="0"
            android:paddingVertical="12dp"
            android:text="YES, I'M SURE"
            android:textColor="@color/my_white"
            android:textSize="16sp"
            app:cornerRadius="24dp" />

    </LinearLayout>
</layout>